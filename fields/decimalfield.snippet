<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>Decimal Field</Title>
			<Shortcut>decimalfield</Shortcut>
			<Description>Code snippet for creating a decimal field.</Description>
			<Author>Christopher Whitley</Author>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
                <Literal>
                    <ID>field</ID>
                    <ToolTip>The name of the field.</ToolTip>
                    <Default>myDecimal</Default>
                </Literal>
			</Declarations>
			<Code Language="csharp"><![CDATA[public decimal $field$;$end$]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>
